{
  "name": "x-loader-simulation",
  "private": true,
  "version": "1.0.0",
  "description": "## Goal",
  "main": "index.js",
  "scripts": {
    "build:dev": "nodemon -w src/index.html -w src/index.js -w src/style.scss -es,scss,html -x \"npm run build\"",
    "prebuild": "jshint src/index.js && mkdirp docs && cp src/index.html docs/",
    "build": "browserify src/index.js -o docs/bundle.js && node-sass src/style.scss > docs/style.css",
    "postbuild": "uglifyjs docs/bundle.js -o docs/bundle.js",
    "test": "wdio wdio.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeropaper/x-loader-simulation.git"
  },
  "author": "Valentin Vago <zeropaper@irata.ch>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zeropaper/x-loader-simulation/issues"
  },
  "homepage": "https://github.com/zeropaper/x-loader-simulation#readme",
  "devDependencies": {
    "browserify": "^14.4.0",
    "cp": "^0.2.0",
    "jshint": "latest",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "nodemon": "latest",
    "simulate-progress": "zeropaper/xt-simulate-progress",
    "uglify-js": "^3.0.28",
    "wdio": "^0.3.3",
    "wdio-mocha-framework": "^0.5.11",
    "wdio-selenium-standalone-service": "0.0.9",
    "wdio-spec-reporter": "^0.1.2"
  }
}
